<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

    <ImageView
        android:id="@+id/hist_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleY="0.8"
        android:layout_margin="5dp"
        android:src="@mipmap/file_dong"/>
    <TextView
        android:id="@+id/hist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hist_img"
        android:layout_alignBottom="@id/hist_img"
        android:textSize="18sp"
        android:layout_marginBottom="3dp"
        android:text="历史记录"/>

    <View
        android:id="@+id/hist_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/hist_title"
        android:background="@color/font_unchecked"/>

    <TextView
        android:id="@+id/hist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hist_line"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="游泳强度:"/>

    <TextView
        android:id="@+id/hist_ka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_checked"
        android:layout_toRightOf="@id/hist_name"
        android:layout_alignBottom="@id/hist_name"
        android:layout_marginLeft="10dp"
        android:text="340大卡"/>

     <TextView
        android:id="@+id/hist_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hist_ka"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@id/hist_name"
        android:textColor="@color/font_unchecked"
        android:text="时间"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>